// Render the new comment form
$(".comment-form-wrapper").html("<%= j render('form', comment: Comment.new) %>");

// Since the new comment form has display: none set initially, show it after a comment submission
$("#new_comment").show();

// Increment the comment counter by one
var comment_counter= $("#comment-count");
var comment_count_value = parseInt(comment_counter.text());
comment_counter.text(comment_count_value + 1);

// Prepend the comment
$('#comments-list').prepend("<%= j render('blogs/comment', comment: @comment) %>");
