<header class="page-header">
  <h1 class="page-heading text-center">Let's Talk!</h1>
</header>

<div id="message-contact-wrapper">
  <%= bootstrap_form_tag url: '/contacts' do |f| %>
    <div id="name-email-inputs" class="inline-group clearfix">
      <div class="group">
        <input type="text" name="name" maxlength="50" required>
        <label>Name</label>
      </div>

      <div class="group">
        <input type="text" name="email" maxlength="100" required>
        <label>Email</label>
      </div>
    </div>

    <div class="material-textarea group">
      <textarea type="text" name="message" maxlength="3000" rows="2" required></textarea>
      <label>Message</label>
    </div>

    <%= f.submit "Send" %>
  <% end %>
</div>

<script>
  $('textarea').blur(function() {
    // check if the textarea has anything typed into it
    if ($(this).val()) {
      $(this).parent().addClass('used');
    } else {
      $(this).parent().removeClass('used');
    }
  });
</script>
