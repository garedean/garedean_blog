<%= content_for :custom_styles do %>
  .container {
    max-width: 1000px;
    width: auto;
  }
<% end %>

<header class="page-header">
  <h1 class="text-center">Work</h1>
</header>

<div id="project-tiles-wrapper">
  <% @projects.each_with_index do |project, index| %>
    <div class="row">

        <div class="col-md-6 project-screenshot <%= 'pull-right' if index % 2 == 0 %>">
          <%= link_to project.url, target: "_blank" do %>
            <%= image_tag "screenshots/#{project.screenshot_name}", id: "#{project.screenshot_name}" %>
          <% end %>
        </div>
        <div class="col-md-6 project-details text-center <%= 'pull-left' if index % 2 == 0 %>">

          <div>

            <h3>
              <%= link_to project.name, project.url, target: "_blank" %>
            </h3>
            <p>
              <%= project.description %>
            </p>

          </div>
        </div>

    </div>

    <% unless @projects.last == project %>
      <hr>
    <% end %>
  <% end %>
</div>



<% if admin? %>
  <footer>
    <span class="pull-right footer-links">
      <%= admin_link_to "Add / Edit", edit_multiple_projects_path %>
    </span>
  </footer>
<% end %>
