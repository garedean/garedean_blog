<header class="page-header">
  <h1 class="page-heading text-center">Projects</h1>

  <p class="x-small text-center">
    <i>(Links open each project site in a new tab)</i>
  </p>
</header>

<ul class="project-list">

  <% @projects.each do |project| %>
    <li>
      <p>
        <%= link_to "#{project.name}:", project.url, target: "_blank" %>
        <%= project.description %>
      </p>

      <p class="clearfix">
        <span class="edit-delete-wrapper pull-right">
          <%= link_to "Edit", edit_project_path(project) %>
          |
          <%= link_to "Delete", project_path(project), :data => {confirm: "Sure you want to delete this?", method: "delete"}, class: "text-danger" %>
        <span>
      </p>
    </li>
  <% end %>
</ul>

<footer>
  <%= link_to "Add Project", new_project_path, class: "buttonize" %>
</footer>
