<header class="page-header">
  <h1 class="page-heading text-center">Projects</h1>

  <p class="x-small text-center">
    <i>(Links open each project site in a new tab)</i>
  </p>
</header>

<ul class="project-list">

  <% @projects.each do |project| %>
    <li>

      <div class="overlay">

        <span class="absolutely-centered large edit-delete-wrapper">
          <%= link_to edit_project_path(project), class:"edit" do %>
            <i class="glyphicon glyphicon-pencil"></i>
          <% end %>

          <%= link_to project_path(project), :data => {confirm: "Sure you want to delete this?", method: "delete"}, class: "delete" do %>
            <i class="glyphicon glyphicon-remove"></i>
          <% end %>

          <%= link_to project.url, target: "_blank", class:"go-to" do %>
            <i class="glyphicon glyphicon-arrow-right"></i>
          <% end %>

        </span>
      </div>

      <%= link_to "#{project.name}:", project.url, target: "_blank" %>
      <%= project.description %>
    </li>
  <% end %>
</ul>

<footer>
  <%= link_to "Add Project", new_project_path, class: "buttonize" %>
</footer>
