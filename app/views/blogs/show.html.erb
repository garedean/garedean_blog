<header class="page-header">
  <h1 class="page-heading text-center">
    <%= @blog.title %>
  </h1>
</header>

<%= @blog.content %>

<% if admin? %>
  <footer>
    <span class="pull-right edit-delete-links">
      <%= link_to "Edit", edit_blog_path(@blog) %> |
      <%= link_to "Delete", @blog, class:"text-danger", method: :delete %>
    <span>
  </footer>
<% end %>
