<header class="page-header">
  <h1 class="page-heading text-center">
    <%= @blog.title %>
  </h1>
</header>

<%= @blog.content %>

<% if admin? %>
  <footer>
    <span class="pull-right edit-delete-links">
      <%= link_to "Edit", edit_blog_path(@blog) %> |
      <%= link_to "Delete", @blog, class:"text-danger", method: :delete %>
    <span>
  </footer>
<% end %>

<hr>

<h4>Comments (<%= @comments.size %>)</h4>

<%= bootstrap_form_for [@blog, @comment] do |f| %>
  <%= f.text_area :text, hide_label: true, placeholder: "Add a comment" %>
  <%= f.submit %>
<% end %>

<div class="blog-comments-wrapper">
  <ul class="">
    <% @comments.each do |comment| %>
      <li>
        <p class="comment-author">
          <%= comment.user.email %>:
        </p>
        <%= comment.text %>
      </li>
    <% end %>
  </ul>
</div>
